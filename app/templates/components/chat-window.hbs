{{#paper-list}}
  {{#if channelHasNoMessages}}
    {{#paper-item class="md-3-line text-center"}}
      <div class="md-list-item-text">
        <h3>Looks like there's no messages on this channel</h3>
        <h4>Why don't you start a conversation?</h4>
      </div>
    {{/paper-item}}
  {{/if}}
  {{#each messages as |message|}}
    {{#paper-item class="md-3-line"}}
      {{#if (eq message.from user)}}
        <div class="md-list-item-text outgoing-message">
          <h4>
            Sent At: {{message.sentAt}}
          </h4>
          <p>
            {{message.message}}
          </p>
        </div>
      {{else}}
        {{paper-icon "perm-identity" size=48}}
        <div class="md-list-item-text incoming-message">
          <h3>
            From: {{message.from}}
          </h3>
          <h4>
            Sent At: {{message.sentAt}}
          </h4>
          <p>
            {{message.message}}
          </p>
        </div>
      {{/if}}
      {{paper-divider inset=true}}
    {{/paper-item}}
  {{/each}}
{{/paper-list}}

{{yield}}
